{% extends 'base.html.twig' %}

{% block body %}

    <div id="container">
        <div class="page-header">
            <h1>How healthy is your website?</h1>
        </div>
        <div id="content">
            {{ form_start(form, {'attr': {'id': 'form_webcheckup'}}) }}
                {% if not form.vars.valid %}
                <div class="alert alert-danger" role="alert">
                    {{ form_errors(form.website) }}
                </div>
                {% endif %}
                <div class="input-group">
                    {{ form_widget(form.website, { 'attr': {'class': 'form-control', 'placeholder': 'Insert your website URL (including http://)...'} }) }}
                    <span class="input-group-btn">
                        {{ form_widget(form.checkup, { 'attr': {'class': 'btn btn-primary'} }) }}
                    </span>
                </div> <!-- /input-group -->
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/nprogress/nprogress.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/aquawebcheckup/js/main.js') }}"></script>
{% endblock %}
